@model IEnumerable<FreelancersAPI.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1 class="section-title text-center">Freelancers API</h1>

<p class="text-center">
    <a asp-action="Create" class="btn btn-lg rounded-pill btn-primary ">Register User</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-row-spacing table-cell-padding table-border-spacing">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Skillsets)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Hobby)
                </th>
                <th class="table-col-actions">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Skillsets)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hobby)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success me-lg-3  mb-2 mb-lg-0">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info me-lg-3  mb-2 mb-lg-0">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mb-2 mb-lg-0">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

