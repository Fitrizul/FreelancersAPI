@model FreelancersAPI.Models.User

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mb-4">Edit User</h1>

<div class="container">
    <div class="row justify-content-center mb-4">
        <!-- Reduced width using col-md-6 col-lg-4 -->
        <div class="col-md-6 col-lg-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Username" class="form-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <div class="form-text text-danger">
                        <span asp-validation-for="Username"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <div class="form-text text-danger">
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <div class="form-text text-danger">
                        <span asp-validation-for="PhoneNumber"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Skillsets" class="form-label"></label>
                    <input asp-for="Skillsets" class="form-control" />
                    <div class="form-text text-danger">
                        <span asp-validation-for="Skillsets"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Hobby" class="form-label"></label>
                    <input asp-for="Hobby" class="form-control" />
                    <div class="form-text text-danger">
                        <span asp-validation-for="Hobby"></span>
                    </div>
                </div>

                <!-- Button Container -->
                <div class="d-flex justify-content-center gap-2">
                    <input type="submit" value="Save" class="btn btn-primary btn-equal-width" />
                    <a href="/" class="btn btn-secondary btn-equal-width">Home</a>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
